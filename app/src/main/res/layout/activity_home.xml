<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context=".activities.bismillah_act">

    <FrameLayout
        android:id="@+id/frameHeader"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_rounded_all"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/taryh"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:contentDescription="@string/todo"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/quranicon" />

            <Button
                android:id="@+id/StartBismillah"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/buttons"
                android:text="@string/quran"
                android:textColor="#EFEEED"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameHeader2"

        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="-200dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_rounded_all"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/history"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:contentDescription="@string/todo"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/history"
                tools:ignore="ImageContrastCheck" />

            <Button
                android:id="@+id/Tarih"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/buttons"
                android:text="Tarih"
                android:textColor="#EFEEED"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameHeader3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="-138dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_rounded_all"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ttext"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:contentDescription="@string/todo"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/zikir"
                tools:ignore="ImageContrastCheck" />

            <Button
                android:id="@+id/Namaz"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/buttons"
                android:text="Namaz"
                android:textColor="#EFEEED"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameHeader4"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_rounded_all"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qosymsha"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:contentDescription="@string/todo"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/qosymsha"
                tools:ignore="ImageContrastCheck" />

            <Button
                android:id="@+id/Qosymsha"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/buttons"
                android:text="Qosymsha"
                android:textColor="#EFEEED"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>